struct node
	{
		int data;
		struct node *next;
	};
		
	struct node *Start=NULL;
	
	struct node *Create_ll(struct node *);	

	struct node *display (struct node*);
	
	struct node *insert_beg(struct node*);
	

MALLOC
		int *ptr
		ptr= (Int*) malloc(sizeof (int)*n) 
		Note:	for array n=locations needed)
			(int *)=type casting
		
		(int*) calloc (n,size)
CALLOC		Note: size=sizeof(int)
		

EXTRA
			int opt;
